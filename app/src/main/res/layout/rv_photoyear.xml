<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="275dp"
                android:layout_height="180dp"
                android:background="@color/gray">

                <ImageView
                    android:id="@+id/iv_frameyear"
                    android:layout_width="wrap_content"
                    android:layout_height="182dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/ic_frame" />


                <ImageView
                    android:id="@+id/iv_emptyfrane"
                    android:layout_width="265dp"
                    android:layout_height="145dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/iv_frameyear"
                    app:layout_constraintHorizontal_bias="0.466"
                    app:layout_constraintStart_toStartOf="@+id/iv_frameyear"
                    app:layout_constraintTop_toTopOf="@+id/iv_frameyear"
                    app:layout_constraintVertical_bias="0.18"
                    app:srcCompat="@drawable/ic_emptyframe" />

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="316dp"
                    android:layout_height="29dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/gray"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/iv_emptyfrane"
                    app:layout_constraintHorizontal_bias="0.418"
                    app:layout_constraintStart_toStartOf="@+id/iv_emptyfrane" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>