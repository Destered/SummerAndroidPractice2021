<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/tvear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/ivphotoear"
        app:layout_constraintEnd_toEndOf="@+id/ivphotoear"
        app:layout_constraintStart_toStartOf="@+id/ivphotoear"
        app:layout_constraintTop_toTopOf="@+id/ivphotoear" />

    <ImageView
        android:id="@+id/ivphotoear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>